{
  "entry": {
    "default": "./themes/default.theme.json"
  },
  "output": {
    "css": {
      "transforms": ["attribute/cti", "time/seconds", "color/css", "name/cti/kebab", "name/mapper"],
      "buildPath": "./themes",
      "files": [
        {
          "destination": "[entry]/[platform]/color.css",
          "format": "css/whitepaper",
          "filter": {
            "group": "color"
          }
        },
        {
          "destination": "[entry]/[platform]/size.css",
          "format": "css/whitepaper",
          "filter": {
            "group": "size"
          }
        }
      ]
    }
  }
}
