{
  "entry": {
    "default": "./themes/default.theme.json"
  },
  "output": {
    "css": {
      "transforms": ["name/cti/kebab"],
      "buildPath": "./themes",
      "files": [
        {
          "destination": "[entry]/[platform]/color.css",
          "format": "css/whitepaper",
          "filter": "whitepaper/color"
        },
        {
          "destination": "[entry]/[platform]/root.css",
          "format": "css/whitepaper",
          "filter": "whitepaper/root"
        }
      ]
    }
  }
}
